@page
@model IdentityNotesDemo.AdminModel
@{
    ViewData["Title"] = "Admin";
}

<h1>Admin</h1>
<table class="table">
    <thead>
        <tr>
            <th width="100px" scope="col">Owner</th>
            <th width="100px" scope="col">Title</th>
            <th scope="col">Text</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Notes)
        {
            <tr>
                <td>@item.Owner</td>
                <td>@item.Title</td>
                <td colspan="6">@item.Text</td>
                <td><a asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger">❌</a></td>
            </tr>
            
        }
    </tbody>
</table>
